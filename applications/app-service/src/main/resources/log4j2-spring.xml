<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATH">./logs</Property>
    </Properties>

    <Appenders>
        <!-- Appender de Consola (JSON) -->
        <Console name="Console" target="SYSTEM_OUT">
            <JSONLayout compact="true" eventEol="true" />
        </Console>

        <!-- Appender de Archivo (JSON) -->
        <File name="File" fileName="${LOG_PATH}/log.log">
            <JSONLayout compact="true" eventEol="true" />
        </File>
    </Appenders>

    <Loggers>
        <!-- Logger específico para UseCase (DEBUG) para seguimiento detallado sin ruido. -->
        <Logger name="co.com.pragma.usecase" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Logger para el código de la aplicación (DEBUG). -->
        <Logger name="co.com.pragma" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Se silencia el logger de consultas SQL para reducir el ruido. -->
        <!-- La traza de acceso a BD se puede seguir en los logs de "CACHE MISS". -->
        <Logger name="io.r2dbc.postgresql.QUERY" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Loggers de frameworks (WARN) para reducir ruido. -->
        <Logger name="org.springframework" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="io.r2dbc" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="io.netty" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="reactor.netty" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="org.hibernate.validator" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="com.zaxxer.hikari" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Logger Raíz (Root): Captura todos los demás errores por defecto. -->
        <Root level="warn">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>