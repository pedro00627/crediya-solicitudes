{
  "timestamp": {
    "$resolver": "timestamp",
    "pattern": {
      "format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
      "timeZone": "UTC"
    }
  },
  "level": {
    "$resolver": "level",
    "field": "name"
  },
  "traceId": {
    "$resolver": "mdc",
    "key": "traceId"
  },
  "spanId": {
    "$resolver": "mdc",
    "key": "spanId"
  },
  "loggerName": {
    "$resolver": "logger",
    "field": "name",
    "abbreviator": "pattern{1.}"
  },
  "threadName": {
    "$resolver": "thread",
    "field": "name"
  },
  "source": {
    "$resolver": "source"
  },
  "mdc": {
    "$resolver": "mdc"
  },
  "message": {
    "$resolver": "message",
    "stringified": true
  },
  "exceptionStackTrace": {
    "$resolver": "exception",
    "field": "stackTrace",
    "stringified": true,
    "truncation": {
      "maxStringLength": 1500,
      "suffix": "..."
    }
  }
}